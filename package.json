{
  "name": "braids-by-zonke",
  "version": "1.0.0",
  "description": "Hair salon booking system",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./src/css/styles.css -o ./public/dist/output.css --watch",
    "build-css-prod": "tailwindcss -i ./src/css/styles.css -o ./public/dist/output.css --minify",
    "dev": "live-server public --port=3000",
    "build": "npm run build-css-prod",
    "deploy": "npm run build && firebase deploy --only hosting"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "firebase": "^12.3.0"
  },
